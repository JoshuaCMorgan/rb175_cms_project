<form class="styled-form side-by-side" action="/user/signin" method="post">
<fieldset>
  <dl>
    <dt><label for="username">Username</label></dt>
    <dd><input type="text" name="username" value="<% params[:username] %>"/></dd>
 
    <dt><label for="password">Password </label></dt>
    <dd><input type="password" name="password"  value="<% params[:password] %>" /></dt>
  </dl>
  <button name="Sign In"class="btn" >Sign In</button>
  </fieldset>
</form>